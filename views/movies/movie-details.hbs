<h2>Movie Details</h2>

{{#if error}}
  <p>{{error}}</p>
{{else}}
  <h3>Title: {{movie.title}}</h3>
  <p>Genre: {{movie.genre}}</p>
  <p>Plot: {{movie.plot}}</p>
  <p>Cast:</p>
  <ul>
    {{#each movie.cast}}
      <li>{{name}} - {{occupation}}- {{catchPhrase}}</li>
    {{/each}}
  </ul>
  <form action="/movies/{{_id}}/edit" method="POST">
  <button type="submit">Edit</button>
  <form action="/movies/{{movie._id}}/delete" method="POST">
    <button type="submit">Delete Movie</button>
  </form>
{{/if}}