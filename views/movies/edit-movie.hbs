<h2>Edit Movie</h2>

<form action="/movies/{{ movie._id }}/edit" method="POST">
  <label for="title">Title:</label>
  <input type="text" id="title" name="title" value="{{ movie.title }}" required>

  <label for="genre">Genre:</label>
  <input type="text" id="genre" name="genre" value="{{ movie.genre }}" required>

  <label for="plot">Plot:</label>
  <input type="text" id="plot" name="plot" value="{{ movie.plot }}" required>

  <label for="cast">Cast:</label>
  <select id="cast" name="cast" multiple required>
    {{#each celebrities}}
      {{#if isInCast movie.cast this._id}}
        <option value="{{ this._id }}" selected>{{ this.name }}</option>
      {{else}}
        <option value="{{ this._id }}">{{ this.name }}</option>
      {{/if}}
    {{/each}}
  </select>

  <button type="submit">Update Movie</button>
</form>
